.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-bar__user-name__top-items__icons__icon')
        = link_to "/groups/new", class: "side-bar__user-name__top-items__icons__icon" do
          = icon('fas', 'edit')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
